<!DOCTYPE html>
<html>

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <!-- <link rel="stylesheet" href="/styles/style.css"> -->
    <title>Admin Pannel - Upload Book Details</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/sweetalert2@10">
    <script src="https://unpkg.com/boxicons@2.1.4/dist/boxicons.js"></script>
    <link href="https://unpkg.com/boxicons@2.0.7/css/boxicons.min.css" rel="stylesheet" />
    <!-- <link rel="stylesheet" href="style.css"> -->
    <link rel="shortcut icon" href="/img/main logo.png" type="image/x-icon">
    <link rel="stylesheet" href="/styles/sidebar.css">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link rel="stylesheet" href="/styles/books-info.css">
    <link rel="stylesheet" href="/styles/responsive.css">
    <style>
        .section {
            display: none;
        }

        .section.selected {
            display: block;
        }

        .main-contanier-books-info-for-btm-footer {
            min-height: 100vh;
            /* width: 100%; */
            padding: 2rem;
            padding-top: 0;
        }

        .main {
            width: calc(100% - 280px);
        }
    </style>
    <link href="https://fonts.googleapis.com/css2?family=Heebo:wght@100;200;300;400;500;600;700;800;900&display=swap"
        rel="stylesheet">
    <script src="https://kit.fontawesome.com/9aa2ea7f69.js" crossorigin="anonymous"></script>
    <style>
        * {
            font-family: 'Heebo', sans-serif;
            text-decoration: none;
            box-sizing: border-box;
        }

        form {
            min-height: 100vh;
        }

        #form-container {
            width: 100%;
            padding: 2rem;
            margin-bottom: .6rem;
        }

        .form-row {
            width: 100%;
        }
        .mobile-hide{
            display: none;
        }

        .form-row input,
        .form-row select {
            padding: 10px;
            width: calc(100% / 5);
            border-radius: 5px;
            border: 1px solid #00f;
        }

        .form-row button {
            background-color: blue;
            color: white;
            padding: .7rem 1rem;
            border: none;
            border-radius: 10px;
        }

        .main-admin-container {
            padding: 2rem 0 0 0;
        }

        body {
            padding-bottom: 0;
        }

        .btns {
            width: 100%;
            display: flex;
            justify-content: center;
            column-gap: 20px;
        }

        .btns button {
            background-color: blue;
            color: white;
            padding: .5rem 1rem;
            border: none;
            transition: .2s ease-in-out;
            border-radius: 10px;
        }

        .btns button:hover {
            background-color: rgb(3, 3, 182);
        }

        .btns button:nth-child(2) {
            color: #00f;
            background-color: transparent;
            border: 1px solid #00f;
        }

        .btns button:nth-child(2):hover {
            background-color: rgb(213, 211, 211);
        }

        .uploaded-books-main {
            width: 100%;
        }

        .table-header-heading h1 {
            margin-bottom: 2rem;
        }

        .footer-container {
            background-color: gray;
            padding: 10px 5px !important;
            width: 100% !important;

        }

        .footer-container h3 {
            color: #fff;
            font-size: 1.3rem;
            text-align: center;
            font-weight: 600;
        }

        @media(max-width : 768px) {
            .mobile-hide{
                display: inline-block;
            }
            #form-container {
                width: 590px;
            }

            h1 {
                font-size: 1.5rem;
            }

            form {
                overflow: scroll;
            }

            .main-admin-container {
                width: 100%;
                box-sizing: content-box;
                padding-left: 115px;
            }

            .section {
                overflow: scroll;
            }

            .sidebar {
                width: 50px;
                padding: 0;
            }

            .sidebar.open {
                padding: 1rem;
            }

            th {
                padding: 0.5rem;
            }

            td {
                min-width: 2rem !important;
            }

            .sidebar li.profile {
                position: fixed;
                height: 60px;
                width: 50px;
                bottom: 0;
            }
            .footer-container {
            padding: 10px 5px !important;
            padding-left: 54px !important;
        }

        .footer-container h3 {
            font-size: .7rem;
        }
        }

        

    </style>
</head>

<body>
    <div class="sidebar">
        <div class="logo-details">
            <div class="logo_name">Admin</div>
            <i class="bx bx-menu" id="btn"></i>
        </div>
        <ul class="nav-list">


            <li class="nav-item selected" data-target="section1">
                <a href="#students_requested_books">
                    <i class="bx bx-chat"></i>
                    <span class="links_name">Student Requests</span>
                </a>
                <span class="tooltip">Student Requests</span>
            </li>


            <li class="nav-item" data-target="section2">
                <a href="#upload_books">
                    <i class='bx bx-book-add' ></i>
                    <span class="links_name">Upload Books</span>
                </a>
                <span class="tooltip">Upload Books</span>
            </li>
            
            <li class="nav-item" data-target="section3">
                <a href="#upload_books_via_csv_files">
                    <i class='bx bxs-folder-plus'></i>
                    <span class="links_name">Upload Books Via CSV File</span>
                </a>
                <span class="tooltip">Upload Books Via CSV File</span>
            </li>


            <li class="nav-item" data-target="section4">
                <a href="#_books_present_in_library">
                    <i class='bx bxs-book'></i>
                    <span class="links_name">Uploaded Books</span>
                </a>
                <span class="tooltip">Uploaded Books</span>
            </li>


            <li class="profile">
                <div class="profile-details">
                    <div class="name"><a href="/logout" style="color: #fff; background-color: transparent;">Log Out</a></div>
                </div>
                <a href="/logout">

                    <i class="bx bx-log-out" id="log_out"></i>
                </a>
            </li>

        </ul>
    </div>
    <div class="main-admin-container">
        <div class="section selected" id="section1">
            <h1 style="text-align: center; color: blue;">Books Requested by Students</h1>
            <table id="data-req-table">
                <thead>
                    <tr>
                        <th> Book Name </th>
                        <th> Student Name</th>
                        <th> UG/PG</th>
                        <th> Student Roll</th>
                    </tr>
                </thead>
                <div class="table__body">

                    <tbody id="table-req-body"></tbody>
                </div>
            </table>
        </div>
        <script>
            fetch('/json/reqbooks.json')
                .then(response => response.json())
                .then(data => {
                    const tableBody = document.getElementById('table-req-body');
        
                    // Reverse the array to display the latest items first
                    data.reverse();
        
                    // Loop through the data and create table rows
                    data.forEach(item => {
                        const row = document.createElement('tr');
                        row.innerHTML = `
                            <td>${item.bookName}</td>
                            <td>${item.studentName}</td>
                            <td>${item.studentProgramme}</td>
                            <td>${item.studentRoll}</td>
                        `;
                        tableBody.appendChild(row);
                    });
                })
                .catch(error => {
                    console.error('Error loading JSON data:', error);
                });
        </script>
        
        <!-- </div> -->
        <div class="section " id="section2">
            <h1 style="text-align: center; color: blue;">Books Uploading Portal</h1>
            <form action="/submitbooks" method="post">
                <div id="form-container">
                    <div class="form-row">
                        <input type="text" name="booktitle" placeholder="Enter Book Title" required>
                        <input type="text" name="authorname" placeholder="Enter Author Name" required>
                        <input type="text" name="publishers" placeholder="Enter Publishers" required>
                        <select name="programme" id="programme">
                            <option value="ug">UG</option>
                            <option value="pg">PG</option>
                        </select>
                        <button class="remove-row">Remove</button>
                    </div>
                </div>
                <div class="btns">
                    <button id="add-row">Add More</button>
                    <button type="submit">Submit</button>

                </div>
            </form>
        </div>
        <div class="section " id="section3">
            <h2>Upload a CSV file:</h2>
            <form action="/upload-csv" method="POST" enctype="multipart/form-data">
                <input type="file" name="csvFile" /> <br><br>
                <span><p style="color: #f00;">
                    * Only CSV Files accepted . Please verify data before inserting. <span class="mobile-hide">Please Use Desktop Instead of Mobile</span>
                </p></span><br>
                <input style="background-color: #00f; color: #fff; border: none; padding: 10px; border-radius: 5px;" type="submit" value="Upload CSV" />
            </form>

        </div>
        <div class="section " id="section4">

            <div class="main-contanier-books-info-for-btm-footer">
                <div class="table-header-heading">
                    <h1 style="font-size: 1.6rem; color: #03045e; text-align: center;">Books Available in Library</h1>
                </div>
                <div class="main uploaded-books-main">
                    <div class="table__header">

                        <div class="table-filter">

                            <label for="status-filter">Filter by Programme:</label>
                            <select id="status-filter">
                                <option value="all">All</option>
                                <option value="ug">UG Course</option>
                                <option value="pg">PG Course</option>
                            </select>
                        </div>

                        <div class="input-group">
                            <input type="text" id="search-input" placeholder="Search...">
                            <!-- <input type="search" placeholder="Search Book..."> -->
                            <img src="/img/search.png">
                        </div>
                    </div>

                    <div id="table-container">
                        <table id="data-table">
                            <thead>
                                <tr>
                                    <th> S.NO </th>
                                    <th> BOOK TITLE</th>
                                    <th> AUTHOR</th>
                                    <th> PUBLISHER</th>
                                    <th> Programme</th>
                                </tr>
                            </thead>
                            <div class="table__body">

                                <tbody id="table-body"></tbody>
                            </div>
                        </table>
                    </div>
                </div>
                <ul class="pagination" id="pagination"></ul>
            </div>
            <script src="/js/table.js"></script>
            <script>
                let sidebar = document.querySelector(".sidebar");
                let closeBtn = document.querySelector("#btn");
                let searchBtn = document.querySelector(".bx-search");

                closeBtn.addEventListener("click", () => {
                    sidebar.classList.toggle("open");
                    menuBtnChange();//calling the function(optional)
                });


                // following are the code to change sidebar button(optional)
                function menuBtnChange() {
                    if (sidebar.classList.contains("open")) {
                        closeBtn.classList.replace("bx-menu", "bx-menu-alt-right");//replacing the iocns class
                    } else {
                        closeBtn.classList.replace("bx-menu-alt-right", "bx-menu");//replacing the iocns class
                    }
                }



                const sectionLinks = document.querySelectorAll(".nav-item");
                const sectionContents = document.querySelectorAll(".section");

                sectionLinks.forEach((link) => {
                    link.addEventListener("click", () => {
                        const target = link.getAttribute("data-target");
                        sectionContents.forEach((content) => {
                            content.classList.remove("selected");
                        });
                        sectionLinks.forEach((l) => {
                            l.classList.remove("selected");
                        });
                        document.getElementById(target).classList.add("selected");
                        link.classList.add("selected");
                    });
                });
            </script>
        </div>
    </div>

    <%- include('partials/footer.ejs') %>
        <script>
            document.getElementById('add-row').addEventListener('click', function () {
                const formContainer = document.getElementById('form-container');
                const newRow = document.querySelector('.form-row').cloneNode(true);
                newRow.querySelectorAll('input').forEach((input) => (input.value = ''));
                formContainer.appendChild(newRow);

                const removeButtons = formContainer.querySelectorAll('.remove-row');
                if (removeButtons.length > 0) {
                    removeButtons.forEach((button) => {
                        button.style.display = 'inline';
                        button.addEventListener('click', function () {
                            formContainer.removeChild(newRow);
                        });
                    });
                }
            });
        </script>
    <% if(showAlert) {%>

        <script src="https://cdn.jsdelivr.net/npm/sweetalert2@10"></script>
        <script>
            const dynamicMessage = '<%= alertMessege %>';
            Swal.fire({
                title: 'Success!',
                text: dynamicMessage,
                icon: 'success'
            });
        </script>

        <% } %>
            

        <script src="js/index.js"></script>
        <script src="js/table.js"></script>

</body>

</html>